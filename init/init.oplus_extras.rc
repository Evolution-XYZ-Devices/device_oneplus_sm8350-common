on boot
    # Anti-Flicker
    chown system system /sys/kernel/oplus_display/dimlayer_bl_en
    chmod 0666 /sys/kernel/oplus_display/dimlayer_bl_en

    # fsync switch
    chown system system /sys/module/sync/parameters/fsync_enabled
    chmod 0666 /sys/module/sync/parameters/fsync_enabled

    # Force fast charge
    chown system system /sys/module/oplus_chg/parameters/force_fast_charge
    chmod 0666 /sys/module/oplus_chg/parameters/force_fast_charge

    # HBM
    chown system system /sys/kernel/oplus_display/hbm
    chmod 0666 /sys/kernel/oplus_display/hbm

    # Max Brightness
    chown system system /sys/kernel/oplus_display/max_brightness
    chmod 0666 /sys/kernel/oplus_display/max_brightness

    # High touch polling rate
    chown system system /proc/touchpanel/game_switch_enable
    chmod 0666 /proc/touchpanel/game_switch_enable

    # Kcal
    chown system graphics /sys/module/msm_drm/parameters/kcal_red
    chmod 0666 /sys/module/msm_drm/parameters/kcal_red
    chown system graphics /sys/module/msm_drm/parameters/kcal_green
    chmod 0666 /sys/module/msm_drm/parameters/kcal_green
    chown system graphics /sys/module/msm_drm/parameters/kcal_blue
    chmod 0666 /sys/module/msm_drm/parameters/kcal_blue
    chown system graphics /sys/module/msm_drm/parameters/kcal_sat
    chmod 0666 /sys/module/msm_drm/parameters/kcal_sat
    chown system graphics /sys/module/msm_drm/parameters/kcal_hue
    chmod 0666 /sys/module/msm_drm/parameters/kcal_hue
    chown system graphics /sys/module/msm_drm/parameters/kcal_val
    chmod 0666 /sys/module/msm_drm/parameters/kcal_val
    chown system graphics /sys/module/msm_drm/parameters/kcal_cont
    chmod 0666 /sys/module/msm_drm/parameters/kcal_cont

    # Measured FPS
    chown system graphics /sys/class/drm/sde-crtc-0/measured_fps
    chmod 0666 /sys/class/drm/sde-crtc-0/measured_fps

    # Power efficient workqueue
    chown system system /sys/module/workqueue/parameters/power_efficient
    chmod 0666 /sys/module/workqueue/parameters/power_efficient

    # Powershare
    chown system system /proc/wireless/enable_tx
    chmod 0666 /proc/wireless/enable_tx

    # Quiet mode
    chown system system /proc/wireless/user_sleep_mode
    chmod 0666 /proc/wireless/user_sleep_mode

    # USB-OTG
    chown system /sys/class/oplus_chg/usb/otg_switch
    chmod 0666 /sys/class/oplus_chg/usb/otg_switch

    # Vibration intensity
    chown system system /sys/devices/platform/soc/88c000.i2c/i2c-6/6-005a/leds/vibrator/level
    chmod 0666 /sys/devices/platform/soc/88c000.i2c/i2c-6/6-005a/leds/vibrator/level
